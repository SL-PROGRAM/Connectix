{#{% extends 'base.html.twig' %}#}

{#{% block title %}Loan index{% endblock %}#}

{% block body %}
    {% dump %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BorrowAmount</th>
                <th>BankInterest</th>
                <th>MonthlyDueDate</th>
                <th>LoanDuration</th>
                <th>DelayLoanRepayment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for loan in loans %}
            <tr>
                <td>{{ loan.id }}</td>
                <td>{{ loan.borrowAmount }}</td>
                <td>{{ loan.bankInterest }}</td>
                <td>{{ loan.monthlyDueDate }}</td>
                <td>{{ loan.loanDuration }}</td>
                <td>{{ loan.DelayLoanRepayment }}</td>
                <td>
                    {#<a href="{{ path('loan_show', {'id': loan.id}) }}">show</a>#}
                    {% if loan.turn == turn %}
                        <div>
                            <a href="{{ path('loan_edit_duration', {'id': loan.id}) }}">edit by duration</a>
                        </div>
                        <div>
                            <a href="{{ path('loan_edit_duedate', {'id': loan.id}) }}">edit by dueDate</a>
                        </div>

                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<a href="{{ path('loan_new_duration') }}">Create new loan by duration</a>#}
    {#<a href="{{ path('loan_new_duedate') }}">Create new loan by due date</a>#}
{% endblock %}
