<form method="post" action="{{ path('sales_order_delete', {'id': sales_order.id}) }}" onsubmit="return confirm({{ 'button.confirm.delete.salesorder' | trans }});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sales_order.id) }}">
    <button class="btn">{{ 'button.delete' | trans }}</button>
</form>
