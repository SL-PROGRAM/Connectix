{% block body %}
    <h1>WorkMan index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Salary</th>
                <th>Formation</th>
                <th>Exprience</th>
                <th>ProductionActivity</th>
            </tr>
        </thead>
        <tbody>
        {% for work_man in work_men %}
            <tr>
                <td>{{ work_man.salary }}</td>
                <td>{{ work_man.formation }}</td>
                <td>{{ work_man.exprience }}</td>
                <td>{{ work_man.productionActivity }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
