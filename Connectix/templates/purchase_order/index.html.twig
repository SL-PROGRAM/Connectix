{% extends 'base.html.twig' %}

{% block title %}PurchaseOrder index{% endblock %}

{% block body %}
    <h1>PurchaseOrder index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Turn</th>
                <th>ProductQuantityPurchase</th>
                <th>PurchasePrice</th>
                <th>PurchaseActivityCost</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for purchase_order in purchase_orders %}
            <tr>
                <td>{{ purchase_order.id }}</td>
                <td>{{ purchase_order.turn }}</td>
                <td>{{ purchase_order.productQuantityPurchase }}</td>
                <td>{{ purchase_order.purchasePrice }}</td>
                <td>{{ purchase_order.purchaseActivityCost }}</td>
                <td>{{ purchase_order.status }}</td>
                <td>
                    <a href="{{ path('purchase_order_show', {'id': purchase_order.id}) }}">show</a>
                    <a href="{{ path('purchase_order_edit', {'id': purchase_order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('purchase_order_new') }}">Create new</a>
{% endblock %}
