{% extends 'base.html.twig' %}

{% block title %}{{ 'template.administration.index.title' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'template.administration.index.h1' | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'template.administration.index.salary' | trans }}</th>
                <th>{{ 'template.administration.index.formation' | trans }}</th>
                <th>{{ 'template.administration.index.experience' | trans }}</th>
                <th>{{ 'template.administration.index.productivity' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for administration in administrations %}
            <tr>
                <td>{{ administration.salary }}</td>
                <td>{{ administration.formation }}</td>
                <td>{{ administration.exprience }}</td>
                <td>{{ administration.productivity }}</td>
                           </tr>
        {% else %}
            <tr>
                <td colspan="9">{{ 'template.administration.index.record' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('player_human_ressourcies') }}">{{ 'template.back.humanRessourcies' | trans }}</a>

{% endblock %}
