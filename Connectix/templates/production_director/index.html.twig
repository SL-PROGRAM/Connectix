{% block body %}
    <h1>{{ 'template.administration.index.h1' | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'template.administration.index.salary' | trans }}</th>
                <th>{{ 'template.administration.index.formation' | trans }}</th>
                <th>{{ 'template.administration.index.experience' | trans }}</th>
                <th>{{ 'template.administration.index.productivity' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for production_director in production_directors %}
            <tr>
                <td>{{ production_director.salary }}</td>
                <td>{{ production_director.formation }}</td>
                <td>{{ production_director.exprience }}</td>
                <td>{{ production_director.productionActivity }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="10">{{ 'template.administration.index.record' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
